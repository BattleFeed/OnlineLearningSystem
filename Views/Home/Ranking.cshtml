@model OnlineLearningSystem.ViewModels.RankingViewModel

@{
    ViewData["Title"] = "Ranking";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Ranking</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                User Name
            </th>
            <th>
                Score
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>
                    @user.Username
                </td>
                <td>
                    @user.Score
                </td>
            </tr>
        }
    </tbody>
</table>
