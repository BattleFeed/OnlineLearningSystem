@model OnlineLearningSystem.Models.Course

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Course</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Intro)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Intro)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sections)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Section ID</th>
                    <th>Section Name</th>
                </tr>
                @foreach (var item in Model.Sections)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.SectionID)
                    </td>
                    <td>
                        <a asp-controller="Sections" asp-action="details" asp-route-id="@item.ID">@Html.DisplayFor(modelItem => item.Name)</a>
                    </td>
                </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-controller="Sections" asp-action="Create" asp-route-id="@Model.ID">Create Section</a> |
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
