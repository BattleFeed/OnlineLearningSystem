@model OnlineLearningSystem.Models.Section

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Section</h4>
<hr />
<div class="row">
    
    <div class="col-md-4">
        
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <input type="hidden" asp-for="CourseID">
            <input type="hidden" asp-for="SectionID">
            <div class="form-group">
                <label asp-for="Course.Name" class="control-label"></label>
                <div>@Html.DisplayFor(model => model.Course.Name)</div>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Intro" class="control-label"></label>
                <input asp-for="Intro" class="form-control" />
                <span asp-validation-for="Intro" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Content" class="control-label"></label>
                @Html.TextAreaFor(model => model.Content, htmlAttributes: new { @id = "container" })
                <script id="container" name="content" type="text/plain"></script>
                <script id="editor" type="text/javascript">
                    var ue = UE.getEditor('container');
                </script>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Details" asp-route-id="@Model.ID">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
